<div class="row text-center">
  <h2>Cocktails</h2>
</div>
<div class="row text-center">
  <div class="div-btn">
    <%= link_to "Create your own cocktail", new_cocktail_path, class: "btn btn-success btn-lg" %>
  </div>
</div>
<div class="row">
  <% @cocktails.each do |cocktail| %>
    <%= render "cocktail_card", cocktail: cocktail %>
  <% end %>
</div>

