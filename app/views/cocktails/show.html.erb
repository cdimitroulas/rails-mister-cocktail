<div class="row text-center">
  <h1><%= @cocktail.name %></h1>
</div>
<% if @cocktail.doses[0] %>
  <div class="row">
    <div class="container">
      <div class="row">
          <div class="col-xs-offset-2 col-xs-8">
            <h4> Method </h4>
          </div>
      </div>
      <% @cocktail.doses.each do |dose|%>
        <div class="row" id="row-dose">
          <div class="col-xs-offset-2 col-xs-4">
            <p><%= dose.description %></p>
          </div>
          <div class="col-xs-4">
            <%= link_to "Delete", dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: "btn btn-danger", id: "btn-delete" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
<div class="div-btn text-center">
  <%= link_to "Add an instruction", new_cocktail_dose_path(@cocktail), class: "btn btn-primary btn-lg" %>
</div>

