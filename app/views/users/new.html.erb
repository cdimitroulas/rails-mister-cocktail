<div class="bg-grey">
<div class="container">
  <div class="form" id="div-form-signup">
    <%= simple_form_for :user, url:'/users', html: {id: "form-signup"} do |f| %>
      <div class="row">
        <div class="col-xs-offset-2 col-xs-8">
          <h1>Signup</h1>
        </div>
      </div>
      <%= f.error_notification %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.submit "Create account", class: "btn btn-primary btn-lg" %>
    <% end %>
  </div>
</div>
</div>
