<div class="row text-center">
  <h1>Edit your cocktail </h1>
</div>
<div class="div-form">
  <div class="container">
    <%= simple_form_for [:current_user, @cocktail] do |f| %>
      <div class="row">
        <div class="col-xs-offset-3 col-xs-6">
          <%= f.input :name %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-offset-3 col-xs-6">
          <%= f.input :photo %>
        </div>
      </div>

      <%= f.input :photo_cache, as: :hidden %>

      </div>
      <div class="row text-center">
        <div class="col-xs-offset-3 col-xs-6">
          <div class="div-btn">
            <%= f.button :submit, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


